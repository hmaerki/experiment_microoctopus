    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest assessment_pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/assessments/assessment_pytest",
            "args": [
                "-v",
                "-s",
                // "tests/test_fut_uart4.py"
                "tests/test_fixture.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest infrastructure_tutorial RPI_PICO 1.23.0",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/octoprobe/infrastructure_tutorial",
            "args": [
                "-v",
                "-s",
                "tests/test_simple.py",
                "--firmware=${workspaceFolder}/octoprobe/infrastructure_tutorial/pytest_args_firmware_RPI_PICO_v1.23.0.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest infrastructure_tutorial RPI_PICO 1.22.1",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/octoprobe/infrastructure_tutorial",
            "args": [
                "-v",
                "-s",
                "tests/test_simple.py",
                "--firmware=${workspaceFolder}/octoprobe/infrastructure_tutorial/pytest_args_firmware_RPI_PICO_v1.22.1.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest infrastructure_tutorial PYBV11 1.22.2",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/octoprobe/infrastructure_tutorial",
            "args": [
                "-v",
                "-s",
                "tests/test_simple.py",
                "--firmware=${workspaceFolder}/octoprobe/infrastructure_tutorial/pytest_args_firmware_PYBV11_v1.22.2.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest infrastructure_tutorial PYBV11 1.23.0",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/octoprobe/infrastructure_tutorial",
            "args": [
                "-v",
                "-s",
                "tests/test_simple.py",
                "--firmware=${workspaceFolder}/octoprobe/infrastructure_tutorial/pytest_args_firmware_PYBV11_v1.23.0.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },

        {
            "name": "Ruff",
            "type": "debugpy",
            "request": "launch",
            "module": "ruff",
            "cwd": "${workspaceFolder}",
            "args": [
                "check",
                "--config",
                "pyproject.toml",
                "--fix",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Mypy",
            "type": "debugpy",
            "request": "launch",
            "module": "mypy",
            "cwd": "${workspaceFolder}",
            "args": [
                "--config-file",
                "pyproject.toml",
                "octoprobe",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python: Octoprobe main",
            "type": "debugpy",
            "request": "launch",
            "module": "octoprobe.main",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
        },
        {
            "name": "Python: op cycle dut",
            "type": "debugpy",
            "request": "launch",
            "module": "octoprobe.scripts.op",
            "cwd": "${workspaceFolder}",
            "args": [
                "cycle",
                "dut",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
        },
        {
            "name": "Python: op cycle infra --serial xxx",
            "type": "debugpy",
            "request": "launch",
            "module": "octoprobe.scripts.op",
            "cwd": "${workspaceFolder}",
            "args": [
                "cycle",
                "infra",
                // "--serial",
                // "d32",
                // "e4636874db405d32",
                // "--serial",
                // "e4636874db124f35",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
        },
        {
            "name": "Python: op power",
            "type": "debugpy",
            "request": "launch",
            "module": "octoprobe.scripts.op",
            "cwd": "${workspaceFolder}",
            "args": [
                "power",
                "--off",
                "infraboot",
                "--off",
                "dut",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
        },
        {
            "name": "Python: op query",
            "type": "debugpy",
            "request": "launch",
            "module": "octoprobe.scripts.op",
            "cwd": "${workspaceFolder}",
            "args": [
                "query",
                "--verbose",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
        }
    ]
}